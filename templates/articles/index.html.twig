{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

    <div class="bg-light">
        <h1 class="display-3 p-5">La liste des articles</h1>
        <p class="lead px-5 pb-3">html.twig étendu de base.html.twig</p>
    </div>

    <div class="container">
        <table class="table table-stripped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Auteur</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Description</th>
                    <th scope="col">Date de publication</th>
                    <th scope="col">Voir</th>
                    <th scope="col">Éditer</th>
                    <!-- raccourci ctrl + maj + l -> sélectionne toutes les balises du même nom en même temps -->
                </tr>
            </thead>
            <tbody>
                {% for art in posts %}
                    <tr>
                        <td>{{ art.id }}</td>
                        <td>{{ art.auteur }}</td>
                        <td>{{ art.titre }}</td>
                        <td>{{ art.description }}</td>
                        <td>{{ art.date_publication|date('d/m/Y H:i:s') }}</td>
                        <td><a href="" class="far fa-eye text-decoration-none"></a></td>
                        <td><a href="" class="fas fa-pencil-alt text-decoration-none text-success"></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
